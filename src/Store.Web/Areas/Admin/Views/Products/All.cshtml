@model ProductListingModel

<div class="row">
    <div class="col-md-12">
        <h2>Products</h2>
        <table class="table" id="productTable">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Description</td>
                        <td><a class="btn btn-primary" href="@("/admin/products/edit/" + product.Id)">Edit</a></td>
                        <td><button class="btn btn-danger delete-product" data-product-id="@product.Id">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col">
                <a class="btn btn-primary" asp-action="Edit" asp-controller="Products" asp-area="Admin">Add New Product</a>
            </div>
            <div class="col">
                <partial name="_PaginationPartial" model="@Model" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin.js" asp-append-version="true"></script>
}