@model CartModel

<h1>Your Shopping Cart</h1>

@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="cartItems">
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td><a href="@("/products/" + item.Product.Id.ToString())">@item.Product.Name</a></td>
                    <td>@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                    <td>
                        <button class="removeButton btn btn-dark" data-product-id="@item.Product.Id">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button id="clearButton" class="btn btn-dark">Clear Cart</button>
}
else
{
    <h1>Нямате продукти в количката</h1>
}

